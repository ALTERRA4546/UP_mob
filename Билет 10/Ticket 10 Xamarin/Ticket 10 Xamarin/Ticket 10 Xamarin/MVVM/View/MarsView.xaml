<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ticket_10_Xamarin.MVVM.View.MarsView">
    <ContentPage.Content>
        <ListView x:Name="myList" ItemsSource="{Binding list}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding price}"/>
                            <Label Text="{Binding id}"/>
                            <Label Text="{Binding type}"/>
                            <Label Text="{Binding img_src}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>