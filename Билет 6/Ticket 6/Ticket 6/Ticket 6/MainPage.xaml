<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ticket_6.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="first" WidthRequest="50" Keyboard="Numeric"/>
            <Picker x:Name="operand" WidthRequest="50" SelectedIndex="0">
                <Picker.Items>
                    <x:String>+</x:String>
                    <x:String>-</x:String>
                    <x:String>*</x:String>
                    <x:String>/</x:String>
                </Picker.Items>
            </Picker>
            <Entry x:Name="two" WidthRequest="50" Keyboard="Numeric"/>
            <Button x:Name="solve" Text="=" Clicked="solve_Clicked"/>
            <Label x:Name="result"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
