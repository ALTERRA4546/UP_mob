<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ticket_4.MainPage">

    <StackLayout>
        <StackLayout>
            <Entry x:Name="Surname"/>
            <Entry x:Name="Name"/>
            <Entry x:Name="Patromic"/>
            <DatePicker x:Name="DateOfBirth"/>
            <Picker x:Name="City">
                <Picker.Items>
                    <x:String>Москва</x:String>
                    <x:String>Киров</x:String>
                    <x:String>Казань</x:String>
                    <x:String>Томск</x:String>
                    <x:String>Пермь</x:String>
                    <x:String>Екатеринбург</x:String>
                    <x:String>Слободской</x:String>
                    <x:String>Воронеж</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Button x:Name="AddEmployee" Text="Add employee" Clicked="AddEmployee_Clicked"/>
            <Button x:Name="ShowEmployee" Text="Show employee" Clicked="ShowEmployee_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
