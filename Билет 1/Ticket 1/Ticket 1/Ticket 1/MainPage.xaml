<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ticket_1.MainPage">

    <StackLayout>
        <StackLayout>
            <Entry x:Name="Surname" Placeholder="Фамилия" WidthRequest="250"/>
            <Entry x:Name="Name" Placeholder="Имя" WidthRequest="250"/>
            <Entry x:Name="Patromic" Placeholder="Отчество" WidthRequest="250"/>
            <Entry x:Name="Group" Placeholder="Группа" WidthRequest="250"/>
            <Entry x:Name="Cource" Placeholder="Курс" WidthRequest="250"/>
            <Picker x:Name="Sex" WidthRequest="250">
                <Picker.Items>
                    <x:String>М</x:String>
                    <x:String>Ж</x:String>
                </Picker.Items>
            </Picker>
            <DatePicker x:Name="DateOfBirth" WidthRequest="250"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Button x:Name="AddStudent" Text="AddStudent" Clicked="AddStudent_Clicked"/>
            <Button x:Name="ShowList" Text="ShowList" Clicked="ShowList_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
